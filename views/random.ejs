<% layout('layouts/app') %>
    <% script('../public/javascripts/random.js') -%>
        <% script('/socket.io/socket.io.js') -%>

            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container">
                    <div class="row mb-2">

                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="offset-md-3 col-md-2">
                            <a href="/" class="btn btn-default text-center" type="button">Go back to friend list</a>
                        </div>
                        <div class="col-md-2">
                            <a href="#" class="btn btn-primary text-center" id="invite_btn">Send a friend invitation</a>
                        </div>
                        <div class="col-md-2">
                            <a href="#" class="btn btn-primary text-center" id="rematch_btn">Rematch</a>
                        </div>
                        <!-- /.col-md-6 -->
                    </div>
                    <div class="row">
                        
                        <div class="offset-lg-3 col-lg-6">
                            
                            <div class="card card-prirary cardutline direct-chat direct-chat-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Direct Chat</h3>
                                    <div class="card-tools">
                                    </div>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <!-- Conversations are loaded here -->
                                    <div class="direct-chat-messages" >
                                        <div class="direct-chat-msg">
                                            <div class="direct-chat-infos clearfix"><span
                                                    class="direct-chat-name float-left"> System
                                                </span><span class="direct-chat-timestamp float-right" id="system_time"></span>
                                            </div>
                                            <div class="direct-chat-text" id="system_progress">Pairing in progress</div>
                                        </div>
                                        <div id="message_content">

                                        </div>
                                    </div>
                                    <!--/.direct-chat-messages-->
                                    

                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <form>
                                        <div class="input-group">
                                            <input type="text" name="message" placeholder="Type Message ..."
                                                class="form-control" control-id="ControlID-3" id="message-input">
                                            <span class="input-group-append">
                                                <button type="button" class="btn btn-primary" control-id="ControlID-4"
                                                    id="send-message">Send</button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                                <!-- /.card-footer-->
                            </div>
                        </div>
                        <!-- /.col-md-6 -->
                    </div>

                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->